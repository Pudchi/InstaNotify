<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.pudchi.slidewarn.advhelper"
                android:background="#d5fcff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:id="@+id/textView1"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/datetext"
        android:text="點擊設定申請日期"
        android:editable="false"
        android:focusable="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:nestedScrollingEnabled="false"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="時間"
        android:id="@+id/textView2"
        android:layout_marginTop="100dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timetext"
        android:text="點擊設定申請時間"
        android:editable="false"
        android:focusable="false"
        android:layout_alignStart="@+id/datetext"
        android:layout_alignTop="@+id/datetext"
        android:layout_marginTop="68dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服務類別"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textIsSelectable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typespinner"
        android:layout_marginLeft="126dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown"
        android:layout_alignLeft="@+id/textView3"
        android:dropDownWidth="wrap_content"
        android:dropDownSelector="@color/background_material_dark"
        android:layout_marginRight="40dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addalertbutton"
        android:src="@drawable/ic_add_alert_black"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
