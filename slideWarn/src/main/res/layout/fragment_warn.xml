<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebfaf8"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幸福老化-即時通知"
        android:id="@+id/logo"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textColor="#800000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/marker_img"
        android:layout_alignParentStart="true"
        android:src="@drawable/location_on_black_48dp"
        android:layout_alignTop="@+id/logo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你現在的位置:"
        android:id="@+id/location_lbl"
        android:layout_below="@+id/logo"
        android:layout_toEndOf="@+id/marker_img"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:textIsSelectable="false"
        android:textSize="18sp"/>

    <Button
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:text="定位"
        android:id="@+id/update_loc"
        android:layout_below="@+id/logo"
        android:layout_toEndOf="@+id/location_lbl"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#0010bd"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="地址"
        android:id="@+id/turn_format"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#0010bd"
        android:layout_below="@+id/logo"
        android:layout_toEndOf="@+id/update_loc"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_txt"
        android:layout_below="@+id/location_lbl"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/marker_img"
        android:textSize="20sp"
        android:textColor="#8b0000"
        android:maxLines="4"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="         點擊 &quot;定位/更新&quot;\n            查看目前位置\n       點擊 &quot;地址/經緯度&quot;\n               轉換格式"/>

    <Button
        android:id="@+id/warn"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="!緊急通知!"
        android:textColor="#ff4500"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"/>

</RelativeLayout>
