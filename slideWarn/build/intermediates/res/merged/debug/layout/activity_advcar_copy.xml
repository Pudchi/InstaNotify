<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.pudchi.slidewarn.advcar"
                android:background="#f5f5dd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/datetext"
        android:text="點擊設定申請日期"
        android:editable="false"
        android:focusable="false"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="28dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="時間"
        android:id="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="36dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/timetext"
        android:text="點擊設定申請時間"
        android:textAlignment="center"
        android:editable="false"
        android:focusable="false"
        android:layout_alignStart="@+id/datetext"
        android:layout_alignTop="@+id/datetext"
        android:layout_marginTop="68dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人數"
        android:id="@+id/textView5"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="72dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_alignTop="@+id/textView4"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countspinner"
        android:spinnerMode="dialog"
        android:layout_alignTop="@+id/timetext"
        android:layout_alignStart="@+id/timetext"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        android:dropDownWidth="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用途"
        android:id="@+id/textView6"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="72dp"
        android:textSize="25sp"
        android:textColor="#CC0000"
        android:layout_alignTop="@+id/textView5"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typespinner"
        android:layout_marginRight="40dp"
        android:spinnerMode="dialog"
        android:layout_alignStart="@+id/countspinner"
        android:layout_alignTop="@+id/countspinner"
        android:layout_marginTop="76dp"
        android:dropDownWidth="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否行動不方便 (是請打勾)"
        android:id="@+id/movebox"
        android:checked="false"
        android:layout_above="@+id/addalertbutton2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColor="#003377"
        android:textSize="20sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addalertbutton2"
        android:src="@drawable/ic_add_alert_black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
