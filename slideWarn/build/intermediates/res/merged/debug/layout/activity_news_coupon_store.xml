<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pudchi.slidewarn.news_coupon"
                android:background="@color/material_blue_grey_800">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="優惠 - 便利商店"
        android:id="@+id/malltext"
        android:textColor="#ff1493"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/sevenlogo"
        android:src="@drawable/seven"
        android:background="@color/button_material_light"
        android:layout_marginTop="120dp"
        android:layout_marginStart="38dp"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:id="@+id/familylogo"
        android:src="@drawable/family"
        android:background="@color/button_material_light"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@+id/sevenlogo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/hilifelogo"
        android:background="@color/button_material_dark"
        android:src="@drawable/hi_life_new"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/sevenlogo"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="38dp"/>

    <ImageButton
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:id="@+id/oklogo"
        android:src="@drawable/ok_logo_new"
        android:background="@color/switch_thumb_normal_material_light"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/sevenlogo"
        android:layout_alignStart="@+id/familylogo"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
