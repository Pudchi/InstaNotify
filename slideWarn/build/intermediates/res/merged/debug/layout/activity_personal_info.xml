<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pudchi.slidewarn.personal_info"
    android:background="#ff424242">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號資料"
        android:id="@+id/info_lbl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#dddddd"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:id="@+id/person_pic"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/ic_assignment_ind_white_48dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用者ID:"
        android:id="@+id/id_lbl"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="80dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_txt"
        android:layout_below="@+id/person_pic"
        android:layout_toEndOf="@+id/id_lbl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textColor="#60e5ff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名: "
        android:id="@+id/name_lbl"
        android:layout_below="@+id/id_lbl"
        android:layout_alignStart="@+id/id_lbl"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_txt"
        android:layout_below="@+id/id_txt"
        android:layout_toEndOf="@+id/id_lbl"
        android:layout_marginTop="16dp"
        android:textColor="#e6ff00"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性別: "
        android:id="@+id/sex_lbl"
        android:layout_below="@+id/name_lbl"
        android:layout_alignEnd="@+id/name_lbl"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sex_txt"
        android:layout_toEndOf="@+id/sex_lbl"
        android:textSize="22sp"
        android:textColor="#ffc439"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/name_lbl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號身份"
        android:id="@+id/identity_lbl"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ff5252"
        android:layout_below="@+id/sex_lbl"
        android:layout_marginTop="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/identity_txt"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textIsSelectable="true"
        android:textColor="#bbff00"
        android:layout_below="@+id/identity_lbl"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"/>

</RelativeLayout>
